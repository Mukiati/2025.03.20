<Window x:Class="_2025._03._20.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025._03._20"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Name="usernameinput" Background="LawnGreen" Grid.Column="1" Margin="10 20"/>
        <PasswordBox Name="passwordinput" Background="LimeGreen" Grid.Column="1" Grid.Row="1" Margin="10 20"/>
        <TextBlock Text="Felhasználónév:" TextAlignment="Center" FontSize="30" VerticalAlignment="Center"/>
        <TextBlock Text="Jelszó:" TextAlignment="Center" FontSize="30" VerticalAlignment="Center" Grid.Row="1"/>
        <Button Click="Loginclick" Grid.Row="2" Grid.ColumnSpan="2" Margin="180 20" Content="Bejelentkezés" FontSize="30"/>
        <Button Click="Regclick" Grid.Row="3" Grid.ColumnSpan="2" Margin="180 20" Content="Regisztráció" FontSize="30"/>

    </Grid>
</Window>
