<Window x:Class="_2025._03._20.afterlogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025._03._20"
        mc:Ignorable="d"
        Title="afterlogin" Height="450" Width="800">
    <Grid Background="Lime">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock TextAlignment="Center" FontSize="33" Background="BlueViolet"  VerticalAlignment="Center">ezt csak akkor látod ha sikerült bejelntkezned</TextBlock>
        <StackPanel Name="lista" Grid.RowSpan="3" Background="LightSeaGreen"/>
        <StackPanel Name="namelista"  Background="DarkSeaGreen" Grid.Column="1" Grid.RowSpan="2"/>
        <StackPanel Name="agelista" Background="DarkSeaGreen" Grid.Column="2" Grid.RowSpan="2"/>
        <StackPanel Background="SeaGreen" Grid.Column="1" Margin="0,1,0,0" Grid.Row="2" Grid.ColumnSpan="2" />
        <TextBox Name="nameinputt" Grid.Column="1" Grid.Row="2" Margin="45,63,90,20"/>
        <TextBox Name="ageinputt" Grid.Column="2" Grid.Row="2" Margin="0,63,100,20"/>
        <Button Grid.Column="2" Height="100" Width="85" Grid.Row="2" Margin="174,30,4,10"/>
        <TextBlock Text="Name" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="Age" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="Létrehozás" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Window>
