<Window x:Class="_2025._03._20.afterlogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025._03._20"
        mc:Ignorable="d"
        Title="afterlogin" Height="450" Width="800">
    <Grid Background="Lime">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel
            Name="dels"
            Background="Cyan"
            Grid.Column="4"
            Margin="0,0,0,10" HorizontalAlignment="Right" Width="32">
        </StackPanel>
        <StackPanel
            Name="alls"
            Background="Cyan"
            Grid.Column="0"
            Grid.RowSpan="2"
            >

        </StackPanel>
        <StackPanel
            Name="szr"
            Background="Cyan"
            Grid.Column="3"
            Grid.RowSpan="1"
            >

        </StackPanel>
        <StackPanel
            Margin="5"
            Grid.Column="1"
            Background="LightGray"
            Name="NameStackPanel"
            >
        </StackPanel>
        <StackPanel
            Grid.Column="2"
                        Margin="5"

            Background="LightGray"
            Name="AgeStackPanel"
            >



        </StackPanel>

        <TextBlock
            Grid.Column="1"
                Text="Name"
                FontSize="20"
                HorizontalAlignment="Center"/>
        <TextBlock
            Grid.Column="2"
                Text="Age"
                FontSize="20"
                HorizontalAlignment="Center"/>
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Background="DodgerBlue"
            Width="60"
            Height="30"
            Margin="180 5 5 10"
            Content="Hozzáadás"
            Click="create"
            />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Background="DodgerBlue"
            Width="60"
            Height="30"
            Margin="183,41,9,138"
            Content="Modosítás"
            IsEnabled="False"
            Name="szerk"
            />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Text="Létrehozás"
            Margin="30 10"
            FontSize="30"/>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Height="40"
            Background="Gray"
            Name="NameInput"/>

        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Width="150"
            Margin="10 10 100 10"
            Height="40"
            Background="Gray"
            Name="AgeInput"/>
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Background="DodgerBlue"
            Width="100"
            Height="30"
            Margin="120 0 -20 -100"
            Content="Mindent töröl"
            Click="deleteAll"
            />

    </Grid>
</Window>
